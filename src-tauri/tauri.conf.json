{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Home Assistant Simple Tray",
  "version": "0.1.5",
  "identifier": "io.dsego.homeassistant-simple-tray",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "visible": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/tray-icon.png"
    ],
    "resources": ["icons/*"],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVGODQxQTFGQjMwRDI4MEYKUldRUEtBMnpIeHFFWDhBNE1Td2drVmluK3l0eGRZS0w1eTl6M2pvcjhxK0pIcGZmVExBdU9pRnAK",
      "endpoints": [
        "https://github.com/dsegovia90/homeassistant-simple-tray/releases/latest/download/latest.json"
      ]
    }
  }
}
